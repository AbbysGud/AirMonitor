<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.fExplore"
    android:background="@color/blue1">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingVertical="30dp"
                android:paddingLeft="15dp">
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/location"/>
                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="WHAT DOES THIS MEAN?"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                android:textColor="@color/blue3"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="end">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nata Endah, Bandung"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:textColor="@color/blue3"
                                    android:textAlignment="textEnd"/>
                                <Space
                                    android:layout_width="5dp"
                                    android:layout_height="match_parent"/>
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/location_blue"/>
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:src="@color/blue1"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="10dp">
                            <LinearLayout
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">
                                <Spinner
                                    android:id="@+id/explore_spin_card1"
                                    android:layout_width="105dp"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/blue3"
                                    android:paddingBottom="10dp"/>
                                <LinearLayout
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="90dp"
                                        android:layout_height="100dp"
                                        app:cardElevation="2dp"
                                        app:cardCornerRadius="10dp"
                                        android:layout_gravity="center"
                                        app:cardBackgroundColor="@color/blue2">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center">
                                            <TextView
                                                android:id="@+id/explore_card1_txtvalue"
                                                android:layout_width="75dp"
                                                android:layout_height="70dp"
                                                android:text="20,5%"
                                                android:textStyle="bold"
                                                android:textSize="14sp"
                                                android:textColor="@color/white"
                                                android:gravity="center"/>
                                            <ImageView
                                                android:layout_width="75dp"
                                                android:layout_height="1dp"
                                                android:src="@color/white"/>
                                            <TextView
                                                android:id="@+id/explore_card1_txtkey"
                                                android:layout_width="75dp"
                                                android:layout_height="wrap_content"
                                                android:text="O2"
                                                android:textStyle="bold"
                                                android:textSize="14sp"
                                                android:textColor="@color/white"
                                                android:gravity="center"/>
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:paddingLeft="20dp">
                                <TextView
                                    android:id="@+id/explore_card1_txt1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="Role of 'O2' in Air Quality:"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue4"/>
                                <TextView
                                    android:id="@+id/explore_card1_txt2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="O2 EXPLANATION"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue3"
                                    android:justificationMode="inter_word"/>
                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="What does good, normal, and bad means?"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue4"/>
                                <TextView
                                    android:id="@+id/explore_card1_txt3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="O2 PARAMETER"
                                    android:textSize="8sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue3" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LAST 7 DAY  AIR QUALITY COMPARISON"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                android:textColor="@color/blue3"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="end">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nata Endah, Bandung"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:textColor="@color/blue3"
                                    android:textAlignment="textEnd"/>
                                <Space
                                    android:layout_width="5dp"
                                    android:layout_height="match_parent"/>
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/location_blue"/>
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:src="@color/blue1"/>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp"/>
                        <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                            android:id="@+id/aa_chart_explore"
                            android:layout_width="match_parent"
                            android:layout_height="350dp"
                            android:layout_gravity="center_horizontal"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CONCLUSION:"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue4"/>
                                <TextView
                                    android:id="@+id/explore_conclusion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue3"
                                    android:justificationMode="inter_word"
                                    android:paddingBottom="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="WHAT IS THE PARAMETER FOR AQI?"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue4"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/AQI"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/blue3"
                                    android:justificationMode="inter_word"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>